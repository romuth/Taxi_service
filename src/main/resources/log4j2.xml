<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
        <File name="LogToFile" fileName="logs/app.log">
            <PatternLayout pattern="%d %p %c:%L %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="mate" level ="info" additivity ="false">
            <AppenderRef ref="LogToFile"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="LogToFile"/>
        </Root>
    </Loggers>
</Configuration>
